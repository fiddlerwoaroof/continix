{
  "name": "state-tree",
  "version": "1.0.0",
  "description": "A simple tree-based state container that provides an alternative state model to redux",
  "main": "dist/state_container.js",
  "scripts": {
    "test": "jest",
    "format": "prettier --write .",
    "babel": "babel src/ -d dist/"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.17.10",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^28.0.3",
    "eslint": "^8.13.0",
    "jest": "^26.6.3",
    "prettier": "^2.6.2",
    "regenerator-runtime": "^0.13.9",
    "webpack": "^5.72.0"
  },
  "dependencies": {
    "immutable": "^4.2.4",
    "ramda": "^0.28.0",
    "sinon": "^13.0.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env"
        ]
      }
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "jsxBracketSameLine": true,
    "arrowParens": "avoid"
  },
  "jest": {
    "testEnvironment": "jsdom"
  }
}
